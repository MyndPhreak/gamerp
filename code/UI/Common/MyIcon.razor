            case "account_balance":
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="100%" height="100%">
                    <path fill="currentColor" d="M12 3L2 8v2h20V8zm0 13c-1.1 0-2-.9-2-2s.9-2 2-2s2 .9 2 2s-.9 2-2 2m0-9c-1.1 0-2-.9-2-2s.9-2 2-2s2 .9 2 2s-.9 2-2 2m0 13c-1.1 0-2-.9-2-2s.9-2 2-2s2 .9 2 2s-.9 2-2 2"/><path fill="currentColor" d="M4 10h2v7H4zm14 0h2v7h-2zM9 10h6v7H9z" opacity=".5"/><path fill="currentColor" d="M2 17h20v2H2z"/>
                </svg>
                break;

            case "chevron_left":
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="100%" height="100%">
                    <path fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m15 18l-6-6l6-6"/>
                </svg>
                break;

            case "send":
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="100%" height="100%">
                    <path fill="currentColor" d="M21.433 3.93a.75.75 0 0 0-1.054-.108L3.43 13.252a.75.75 0 0 0 .15 1.353l6.45 2.253a.75.75 0 0 0 .866-.34L15 10.353l.354.353a.75.75 0 1 0 1.06-1.06L14 7.293l2.252-4.137Z"/><path fill="currentColor" d="M16.5 13.5L11 19l-4-4l10-10l10 10l-10 10l-10-10l5-5" opacity=".5"/>
                </svg>
                break;

            case "payments":
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="100%" height="100%">
                    <path fill="currentColor" d="M19 6H5c-1.1 0-2 .9-2 2v8c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V8c0-1.1-.9-2-2-2m-7 9c-1.1 0-2-.9-2-2s.9-2 2-2s2 .9 2 2s-.9 2-2 2"/><path fill="currentColor" d="M7 8h10v2H7z" opacity=".5"/>
                </svg>
                break;

            case "history":
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="100%" height="100%">
                    <path fill="currentColor" d="M13 3a9 9 0 0 0-9 9H1l3.89 3.89l.07.14L9 12H6a7 7 0 1 1 7 7a7.07 7.07 0 0 1-6-3.37L5.46 17.11A8.92 8.92 0 1 0 13 3m-1 5v5l4.28 2.54l.72-1.21l-3.5-2.08V8z"/>
                </svg>
                break;

            case "add":
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="100%" height="100%">
                    <path fill="currentColor" d="M19 12.998h-6v6h-2v-6H5v-2h6v-6h2v6h6z"/>
                </svg>
                break;

            case "remove":
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="100%" height="100%">
                    <path fill="currentColor" d="M19 12.998H5v-2h14z"/>
                </svg>
                break;

            default:
                <icon style="font-size: @(Size)px;">@Name</icon>
                break;
        }
    }
</root>

@code {
    [Property] public string Name { get; set; }
    [Property] public Color Color { get; set; } = Color.White;
    [Property] public float Size { get; set; } = 24f;

    protected override int BuildHash() => System.HashCode.Combine( Name, Color.Hex, Size );
}
