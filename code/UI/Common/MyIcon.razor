@using Sandbox;
@using Sandbox.UI;
@using System;
@inherits Panel

<root class="icon" style="width: @(Size)px; height: @(Size)px; min-width: @(Size)px; min-height: @(Size)px; display: flex; align-items: center; justify-content: center; text-transform: none;">
	@if ( !string.IsNullOrEmpty( Name ) && Name.EndsWith( ".svg", StringComparison.OrdinalIgnoreCase ) )
	{
		<img src="@Name" style="width: 100%; height: 100%; object-fit: contain; image-tint: @Color.Hex;" />
	}
	else
	{
		<icon style="font-family: 'Material Icons'; font-size: @(Size)px; color: @Color.Hex; text-transform: none;">@(Name?.ToLower())</icon>
	}
</root>

@code {
	[Property] public string Name { get; set; }
	[Property] public Color Color { get; set; } = Color.White;
	[Property] public float Size { get; set; } = 24f;

	protected override int BuildHash() => System.HashCode.Combine( Name, Color.Hex, Size );
}
